#exec --no-startup-id xautolock -time 60 -locker "systemctl suspend"


# Custom scripts.
exec --no-startup-id sleep 5 && ~/.config/i3/scripts/fix_caps.sh # Caps lock delay fix
exec --no-startup-id ~/.config/i3/scripts/set_mouse_dpi.sh # Disables acceleration too.

# background apps
exec --no-startup-id 1password --silent

# Desktop notifications
